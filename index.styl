.first-img-anim{
    background: radial-gradient(#735b00, #000 50%);
    display: block;
    position: absolute;
    height: 100%;
    width: 100%;
    top: 0%;
    margin: 0 auto;
    transition: all ease 0.5s;
    transform: scale(0);
}

.single-img {
    font-size: 0;
    line-height: 0;
    position: relative;
    .bubble-icon{
        position: absolute;
        z-index: 1;
        width: 70px;
        right: 10px;
        height: 100px;
        bottom: -10px;
        animation:mymove 0.4s infinite;
        -webkit-animation:mymove 0.4s infinite; /*Safari and Chrome*/
        //-webkit-animation-delay:0.01s;
        -webkit-animation-direction:alternate;
        animation-direction:alternate;

    }

    @-webkit-keyframes mymove/*Safari and Chrome*/
    {
        0% {right: 0px; bottom: -10px}
        100% {right: 10px;bottom: -20px;}
    }

    @keyframes mymove{
        0% {right: 0px; bottom: -10px}
        100% {right: 10px;bottom: -20px;}
    }
    .has-pay-number{
        position: absolute;
        z-index: 1;
        height: 18px;
        width: 35%;
        margin-left: 34.5%;
        bottom: 17%;
        .has-pay-order{
            height: 18px;
            border: 1px solid red;
            width: 50%;
            border-radius: 10px;
            float: left;
            .box-item{
                height: 100%;
                width: 25%;
                float: left;
                border-right: 1px solid red;
                text-align: center;
                font-weight:bold;
                p{
                    height: 16px;
                    line-height: 16px;
                    color: red;
                    font-size: 14px;
                }
            }
            .box-no-right{
                border-right:none;
            }
        }
    }
    .has-pay-text{
        float: left;
        margin-left: 2px;
        p{
            height: 16px;
            line-height: 16px;
            color: black;
            font-size: 12px;
        }
    }
    img {
        display: block;
        position: absolute;
        width: 100%;
        left: 0;
        top: 0;
    }
}

.share-mask {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    z-index: 900;
    background-color: #000;
    opacity: 0.65;
    .content {
        position: absolute;
        top: 10px;
        width: 100%;
        height: 100%;
        img {
            width: 200px;
            height: 150px;
            position: absolute;
            top: 0;
            right: 20px;
        }
    }
}

