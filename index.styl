.staySingle {
    background: #fff;
    width: 100%;
    padding-bottom: 10px;
    .confirm-num {
        font-size: 27px;
        text-align: center;
        margin: -1px auto 10px auto;
        color: #666;
        font-weight: bold;
    }
    .change_num {
            color: #f62566;
    font-size: 12px;
    text-align: right;
    width: 220px;
    margin: -10px auto 10px auto;
    }
    .coupon-img {
        border: 0;
        vertical-align: middle;
        width: 150px;
        margin: 20px auto;
        display: block;
    }
    .listen-title {
        font-size: rem(24);
        font-weight: bold;
        position: relative;
        margin-bottom: 0;
        .title-info {
            overflow: hidden;
            text-overflow: ellipsis;
            line-height: 40px;
            vertical-align: middle;
            white-space: nowrap;
            width: 100%;
            display: inline-block;
            padding-top: 20px;
            text-align: center;
        }
        .close-icon {
            width: 20%;
            text-align: right;
            position: absolute;
            right: 0;
            top: 50%;
            -webkit-transform: translateY(-50%);
            transform: translateY(-50%);
            .icon {
                margin-right: rem(10);
            }
        }
    }
    .remind-msg {
        text-align: center;
        color: #999;
        margin-bottom: 15px;
        margin: 5px 30px;
        font-size: 12px;
        line-height: 1.5;
        .text-orange{
            color: #FF7F24;
        }
    }
    .g-t {
        margin-top: -2px!important;
        text-align: center;
        color: rgb(138, 138, 138);
        margin-bottom: 15px;
        margin: 10px;
        font-size: 12px;
        line-height: 1.5;
    }
    .t-l {
        text-align: left;
    }
    .formElement {
        width: 80%;
        margin: 10px auto;
        >div {
            width: 100%;
            height: 44px;
            vertical-align: middle;
            border-radius: 25px;
            border: 1px solid #ebebed;
            overflow: hidden;
            position: relative;
            padding: 0 20px;
        }
        input {
            width: 100%;
            height: 24px;
            line-height: 24px;
            vertical-align: middle;
            padding: 10px 0;
            font-size: 15px;
            color: #3d3d3e;
            border: 0;
            -webkit-appearance: none;
        }
    }
    .verify-container {
        position: relative;
    }
    .verify {
            position: absolute;
    top: 0px;
    display: inline-block;
    height: 33px;
    line-height: 34px;
    vertical-align: middle;
    right: 0;
    width: 80px;
    text-align: center;
    z-index: 1000;
    margin: 4px;
    background: #f7bd08;
    border-radius: 25px;
    color: #fff;
    font-size: 12px
    }
    .disabled {
        color: #fff;
    }
    .staySubmit {
        padding: rem(10);
        margin: 0 auto;
        text-align: center;
        width: 80%;
        background: rgb(246, 0, 79);
        font-size: rem(16);
        color: #ffffff;
        border-radius: 25px;
    }
    .staySubmit-default {
        background: #3fa5f2;
    }
}

.stay-dialog-title {
    color: #48b14b;
    display: inline-block;
    margin-right: 2px;
}

